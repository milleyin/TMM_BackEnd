//旅游活动分字段编辑================================编辑商品名称
// 模块/方法：
// index.php?r=api/actives/UpdateShopsName&id=303

// 传值方式：
// POST   

{
     "Shops": {
        "name": "创建线222"							//商品名称
	},
	"TMM_CSRF":"dd61bfe20fc69626629d9e03427aff502e574b19"	//csrf码值
}

// 正常返回 结果
{
    "status": 1,
    "code": 0,
    "msg": "正确",
    "data": {
        "status": 1
    }
}

// 错误返回 结果
{
    "status": 0,
    "code": 50005,
    "msg": "数据不合法",
    "data": []
}



