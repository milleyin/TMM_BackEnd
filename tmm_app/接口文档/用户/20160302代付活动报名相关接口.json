
//报名代付活动相关接口文档

// UEL /index.php?r=api/attend/create&id={活动ID或者活动消费码}

// ******* 说明 公开的活动 用ID或者活动消费码 都可以报名 没有公开的活动 只能用活动消费码报名 ID 无效

// POST 请求 无需登录 需要GET 请求获取秘钥

// 需要获取短信验证码 详情见下 （活动获取短信验证码）

//存在错误
{
    "status": 0,
    "code": 40201,
    "msg": "表单数据验证不通过",
    "form": [
        {
            "Attend_phone": [
                "活动不能报名"
            ]
        }
    ]
}
{
    "status": 0,
    "code": 40201,
    "msg": "表单数据验证不通过",
    "form": [
        {
            "Attend_sms": [
                "短信验证码 错误"
            ]
        },
        [],
        []
    ]
}
{
    "status": 0,
    "code": 40201,
    "msg": "表单数据验证不通过",
    "form": [
        [],
        [],
        {
            "Attend_name": [
                "姓名 不可为空白."
            ]
        }
    ]
}
{
    "status": 0,
    "code": 50005,
    "msg": "数据不合法",
    "data": []
}

////////////////////////////////////
//数据格式
{
  "Attend":[
		{
          "sms":"595593",	//短信验证码 
          "name":"郑金龙",	//报名人姓名
          "phone":"15814421487",//报名手机号 获取短信的手机号
          "people":"2",			//成人数量 包含自己 （报名人员默认成人）
          "children":"1"		//儿童 数量
		},
		{
          "name":"我啊",		//出行人员 姓名 
		  "phone":"13632677944",//出行人员 手机号 （儿童是不用手机号）
		  "is_people":"1"		// 1 表示该出行人员是成人 0 表示 儿童 且没有手机号
		},
		{
          "name":"莫啊",		//出行人员 姓名
		  "is_people":"0"		// 1 表示该出行人员是成人 0 表示 儿童 且没有手机号
		}
	]
}

//正确的返回
{
    "status": 1,
    "code": 0,
    "msg": "正确",
    "data": {
        "status": 1
    }
}
//成功后会登录当前验证手机号 （如果之前有手机号登录 会退出 ）

