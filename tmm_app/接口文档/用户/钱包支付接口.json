
//钱包支付接口

// UEL  index.php?r=api/callback/account&id={id}  {id}: 订单号或者订单ID

// POST

// 需要GET ( {url}&csrf=csrf ) 获取秘钥  

//需要登录

//POST  数据格式
{
	"Password":{
		"_pwd":"123456"
	},
	"TMM_CSRF":""
}

//存在错误 返回的数据 

//正确的返回数据
{
    "status": 1,
    "code": 0,
    "msg": "正确",
    "data": {
        "name": "支付密码验证通过",				//名称
        "value": 1,								//支付密码的状态 详细见 密码状态
        "surplus": -1,							//是否有限制单次错误次数 
        "status": {
            "name": "支付成功",					//名称
            "value": 1,							//支付成功状态 详细见 支付状态
            "info": "支付成功",					//支持信息
            "type": {
                "name": "自助游(线)",			//订单类型
                "value": "2",					//类型值
                "link": "http://localhost/tmm/index.php?r=api/order/view&id=55" //订单详情链接
            }
        }
    }
}

