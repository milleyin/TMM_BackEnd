html, body {
    height: 100%;
}
body {
    line-height: 1.6;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
    margin: 0;
    padding: 0;
    font-size: 12px;
    color: #333333;
}
a img {
    border: 0;
}
a, a:link, a:hover, a:active, a:visited{
    text-decoration: none;
}
input{
    line-height: 25px;
    border: none;
    /*ios上的bug*/
    -webkit-appearance: none;
}

.number-deal::-webkit-textfield-decoration-container {
    /*background-color: #f0f3f9;*/
}
.number-deal::-webkit-inner-spin-button {
    -webkit-appearance: none;
}
.number-deal::-webkit-outer-spin-button {
    -webkit-appearance: none;
}

.clear {
    clear: both;
}
.wrap {
    width: 100%;
    height: auto;
    background: url("../images/bg.png") no-repeat;
}

/* 樱花活动详情 */
.article {
    display: block;
    width: 100%;
    height: 100%;
}

.activity-ticket {
    padding-top: 35px;
}

.activity-ticket .ticket-label {
    margin-bottom: 10px;
    padding-left: 25px;
    font-size: 15px;
    color: #FFFFFF;
}
.activity-ticket .ticket-info {
    padding: 0 1.1rem;
}
.activity-ticket .ticket-img {
    display: inline-block;
    border: none;
    width: 45%;
    height: 100%;

}
.activity-ticket .ticket-img.ticket-img-left {
    margin-right: 1.5rem;
}
.activity-ticket .activity-desc {
    padding: 35px 1.5rem 15px 1.5rem;
    font-size: 13px;
    color: #FFFFFF;

}

/* 关注公众号 */
.public-wrap {
    padding-top: 10px;
    text-align:center
}
.public-tip {
    margin: 10px 0;
    font-size: 15px;
    font-weight: 800;
    color: #ff4c52;
}
.public-desc {
    width: 70%;
    padding: 0;
    margin: 0 auto;
    text-align: left;
}
.public-desc li {
    list-style: none;
    padding: 3px 0;
    font-size: 14px;
    line-height: 20px;
}