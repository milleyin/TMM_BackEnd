	/**
	 * 获取密码 数据模型
	 * @param unknown $role_id
	 * @param unknown $type
	 * @param unknown $status
	 * @return Ambigous <static, mixed, NULL, multitype:static , multitype:unknown Ambigous <static, NULL> , multitype:, multitype:unknown >
	 */
	public function getPassword($role_id, $type, $status = self::_STATUS_NORMAL)
	{
		$criteria = new CDbCriteria;
		$criteria->with = array(
			'Password_Role',
		);
		$criteria->addColumnCondition(array(
				'`t`.`role_id`'=>$role_id,
				'`t`.`type`'=>$type,
				'`Password_Role`.`id`'=>$role_id,
		));	
		if ($status !== false)
			$criteria->addColumnCondition(array('`t`.`status`'=>$status));
		
		return $this->find($criteria);
	}
	
