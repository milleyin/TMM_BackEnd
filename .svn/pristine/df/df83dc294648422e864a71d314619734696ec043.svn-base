<extend name="Base/common"/>

<block name="body">
    <div class="container gdu-container">
        <div class="row gdu-row-left">
            <div class="col-xs-12 col-sm-9">
                <div class="row show-grid grid-no-border">
                    <div class="col-xs-12 col-sm-12 gdu-article-normal-row">
                        <h1 class="gdu-article-title">{$info.title}</h1>
                        <div class="gdu-article-options">
                            <span class="gdu-article-time">{$info.update_time|date='Y-m-d',###}</span>
                            <span class="gdu-article-type">{$category.title}</span>
                        </div>
                        <div class="gdu-article-description clearfix">
                            <span class="gdu-article-description-remark">导读</span>
                            <div class="gdu-article-description-content">
                                {$info.description}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row show-grid grid-no-border">
                    <div class="gdu-article-content">
                        {$info.content}
                    </div>
                </div>
            </div>
            <!--/.col-xs-12.col-sm-9-->
            <div class="col-xs-6 col-sm-3" id="sidebar">
                <include file="Public/sidebar"/>
            </div>
            <!--/.sidebar-offcanvas-->
        </div>
        <!--/row-->
        <div class="go-top" style="display: none;"></div>
    </div>
</block>
