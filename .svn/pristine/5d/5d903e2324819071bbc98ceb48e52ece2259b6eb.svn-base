<?php
class StoreModule extends CWebModule
{
    public $ipFilters=array('127.0.0.1','::1');

    public function init()
    {
        // this method is called when the module is being created
        // you may place code here to customize the module or the application
        Yii::app()->homeUrl=array('/'.$this->getId());
        // import the module-level models and components
        $this->setImport(array(
            'store.models.*',
            'store.components.*',
        ));
        Yii::app()->setComponents(array(
            'errorHandler'=>array(
                'class'=>'CErrorHandler',
                'errorAction'=>$this->getId().'/store_error',
            ),
            'store'=>array(
                'class'=>'StoreWebUser',
                'stateKeyPrefix'=>'store',//后台session前缀
                'loginUrl'=>array($this->getId().'/store_login'),
                'loginRequiredAjaxResponse'=>'STORE_LOGIN_REQUIRED',
                'allowAutoLogin'=>true,                                //利用Cooike 自动登录
                'autoRenewCookie'=>true,                            //自动登录的时候刷新Cooike的时间
                'identityCookie'=>array('httpOnly'=>true),//防止JS修改Cookie
            ),
            'session' => array(
                'class'=>'CHttpSession',
                'cookieParams'=>array('httponly'=>true),//防止JS修改Cookie
                'cookieMode'=>'only',//保存SessionID 仅仅用Cookie的方式保存
                'timeout' =>1440,
                //'useTransparentSessionID'=>false,//禁止SessionID通过URL方式明文传输
            ),
        ),false);
    }

    public function beforeControllerAction($controller, $action)
    {
        if(parent::beforeControllerAction($controller, $action))
        {
            $route=$controller->id.'/'.$action->id;
            if(!$this->allowIp(Yii::app()->request->userHostAddress) && $route!=='store_error/index')
                throw new CHttpException(403,"你没有权限访问系统后台。有问题请联系管理员！！");
            $publicPages=array(
                'store_error/index',
                'store_login/index',
                'store_login/login_sms',
                'store_error/index',
                'store_login/captcha',
                'store_login/captcha_sms',
            );
            if(Yii::app()->store->isGuest && !in_array($route,$publicPages)) {
                Yii::app()->getRequest()->headerCrossDomain();
                Yii::app()->controller->send(array('login'=>false,'route'=>$route),Yii::app()->params['STORE_LOGIN_REQUIRED']);
            } else
                return true;
        }
        else
            return false;
    }

    protected function allowIp($ip)
    {
        if(empty($this->ipFilters))
            return true;
        foreach($this->ipFilters as $filter)
        {
            if($filter==='*' || $filter===$ip || (($pos=strpos($filter,'*'))!==false && !strncmp($ip,$filter,$pos)))
                return true;
        }
        return false;
    }
}
