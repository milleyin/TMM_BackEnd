<extend name="Base/common"/>
<block name="style">
    <link href="__CSS__/selfie.css" rel="stylesheet">
    <style>
        .tmm-self-index .content .info .con, .tmm-self-index .content .info .con-item-size {
            position: relative;
        }
    </style>
</block>
<block name="body">
<body class="tmm-self-index">
    <div class="banner">
        <div class="tmmSear">
            <form id="searchForm" action="{:U('Vote/findRacing')}" method="post">
                <input type="search" class="sear" id="search_input" name="keyword" placeholder="请输入编号或名字查找">
            </form>
        </div>
        <img src="__IMG__/culture2.png">
        <div class="participate">

            <if condition="$isApply == true ">
                <a href="{:U('Vote/detail', array('id'=>$racingId))}" class="par">我的参赛</a>
            <else/>
                <if condition="$isEnd == true ">
                    <a href="javascript:;" class="par parBg">活动已结束</a>
                <else/>
                    <a href="{:U('Vote/apply')}" class="par">我要参加</a>
                </if>
            </if>

        </div>
        <div class="rule">
            <a href="{:U('Vote/rewards')}">查看奖品及参赛规则</a>
        </div>
    </div>
    <div class="content">
        <div class="title">
            <a href="{:U('Vote/index', array('type'=>1))}" class="<eq name='type' value='1'>active<else/></eq>">最新参赛</a>
            <a href="{:U('Vote/index', array('type'=>2))}" class="<eq name='type' value='2'>active<else/></eq>">投票排行</a>
        </div>
        <div id="racing-container" class="info tmm-div-clear">
            <div class="con-item-size"></div>
        <volist name="racingList" id="vo">
            <div class="con">
                <div class="con-detail">
                    <a href="{:U('vote/detail', array('id'=>$vo['id']))}">
                        <img src="__ROOT__/{$vo.racingImg}">
                    </a>
                    <div class="no"><span>{$vo.id}</span><span>{$vo.nickname}</span></div>
                    <div class="num"><span class="racing-poll">{$vo.poll}</span>票</div>
                    <a href="javascript:;" class="vote" data-id="{$vo.id}">投票</a>
                </div>
            </div>
        </volist>
        </div>
    </div>
    <div class="top topPos" id="go-top" style="display: none"><a href="javascript:;">回到顶部</a></div>
    <div class="bgFilter" style="display: none;"></div>
    <div class="coupon" style="display: none;" id="voteSuc">
        <img src="__IMG__/close.png" class="img closeAlert">
        <div class="infoSuc voteSuc">
            <div class="state">投票成功</div>
            <div class="txt">赠</div>
            <div class="give-card">
                <div class="left">
                    <div class="price">￥<span>10</span></div>
                    <div class="intro">
                        <p class="txt">获得现金券一张</p>
                    </div>
                </div>
                <div class="right"><a href="http://wap.koudaitong.com/v2/ump/promocard/fetch?alias=n4vo1tpn">点击<br>领取</a></div>
            </div>
        </div>
    </div>
</body>
</block>
<block name="script">
    <script src="__STATIC__/layermobile/layer.js"></script>
    <script src="__STATIC__/masonry.min.js"></script>
    <script src="__STATIC__/imagesLoaded.min.js"></script>
    <script>
        $(function() {
            function showMsg(title, msg) {
                title = title || '';
                msg = msg || '';
                layer.open({
                    title: title,
                    shadeClose: false,
                    content: msg,
                    style: 'background-color:#fff; color:#ea5336;border:none;border-radius:5px;',
                    time: 1
                });
            }
            var page = parseInt("{$page}");
            var type = "{$type}";
            var $loading = $("#loading");
            var $loadingText = $('#loading-text');
            var $container = $('#racing-container');

            $container.masonry({
                columnWidth: '.con-item-size',
                itemSelector: '.con',
                percentPosition: true
            });
            var flag = false;
            $(window).scroll(function() {
                if ($(this).scrollTop() > 500) {
                    $('#go-top').fadeIn();
                } else {
                    $('#go-top').fadeOut();
                }
                if(flag) return;
                if($(document).scrollTop() >= $(document).height() - $(window).height()) {
                    $loadingText.html('加载中，请稍后...');
                    $loading.show();
                    flag = true;
                    //页面拖到底部了
                    var html = '';
                    $.ajax({
                        type: "GET",
                        url: "__MODULE__/Vote/getMoreRacing/type/" + type + "/p/" + page,
                        success: function(data) {
                            if (data.length > 0) {
                                for(var i in data){
                                    var url = "__MODULE__/Vote/detail/id/" + data[i].id;
                                    html += '<div class="con">'
                                            + '<div class="con-detail">'
                                            + '<a href="'+url+'">'
                                            + '<img src="__ROOT__/' + data[i].racingImg + '">'
                                            + '</a>'
                                            + '<div class="no"><span>'+data[i].id+'</span>'
                                            + '<span>'+data[i].nickname+'</span>'
                                            + '</div>'
                                            + '<div class="num">'
                                            + '<span class="racing-poll">'+data[i].poll+'</span>票'
                                            +'</div>'
                                            +'<a href="javascript:;" class="vote" data-id="'+ data[i].id +'">投票</a>'
                                            + '</div>'
                                            + '</div>';
                                }
                                var $newElems = $(html).appendTo($container);
                                $newElems.imagesLoaded(function(){
                                    $container.append( $newElems ).masonry( 'appended', $newElems );
                                });
                                page = page+1;
                                $loadingText.html('加载完成');
                            } else {
                                $loadingText.html('没有更多数据了...');

                            }
                            $loading.fadeOut('slow', function() {
                                $loadingText.html('加载中，请稍后...');
                            });
                            flag = false;

                        }
                    });
                }
            });

            $('#go-top').on("click", function() {
                $("body, html").animate({
                    scrollTop: 0
                }, '500');
            });

            $('#racing-container').on('click', '.vote', function() {
                var _this = $(this);
                var id = _this.attr('data-id');
                $.ajax({
                    type: "POST",
                    url: "{:U('Vote/vote')}",
                    data: {'id':id},
                    success: function(response) {
                        if (response.status == 1) {
                            $('body').css({'width':'100%', 'height':'100%', 'overflow':'hidden', 'position': 'fixed'});
                            $('.bgFilter').show();
                            $('#voteSuc').show();
                            var $racingPoll =  _this.closest('.con').find('.racing-poll');
                            $racingPoll.html(parseInt($racingPoll.html()) + 1);
                        } else if (response.status == 2) {
                            showMsg('', response.prompt);
                            var $racingPoll =  _this.closest('.con').find('.racing-poll');
                            $racingPoll.html(parseInt($racingPoll.html()) + 1);
                        } else if (response.status == 3) {
                            window.location.href = "{:U('vote/follow')}";
                        } else {
                            showMsg('', response.prompt);
                        }
                    }
                });
            });

            $('.closeAlert').on('click', function() {
                $('body').removeAttr('style');
                $('.bgFilter').hide();
                $(this).parent().hide();
            });

            $('#search_clear').on('click', function() {
                $('#search_input').val('');
            });

            $('#searchForm').submit(function() {
                var keyword = $("#search_input").val();
                if ($.trim(keyword) == "") {
                    $("#search_input").blur();
                    showMsg('', '请输入编号或名字查找');
                    return false;
                }
                $.ajax({
                    type: "POST",
                    url: "{:U('Vote/findRacing')}",
                    data: {'keyword':keyword},
                    success: function(response) {
                        if (response.status == 1) {
                            window.location.href = "__MODULE__/Vote/detail/id/" + response.data.id;
                        } else {
                            showMsg('', response.prompt);
                        }
                    }
                });
                $("#search_input").blur();
                return false;
            });
        });
    </script>
</block>
