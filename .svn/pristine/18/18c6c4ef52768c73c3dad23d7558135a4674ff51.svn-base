// 成功
{
    "status": 1,
    "code": 0,
    "msg": "正确",
    "data": {
        "order": { // 订单信息
            "name": "MJ2015092500030", // 订单号
            "value": "1", // 订单id
            "link": "http://test.365tmm.net/index.php?r=api/order/view&id=2" // 订单详情链接
        },
        "order_status": { // 订单状态-3=>'已过期',-2=>'已退款',-1=>'已取消',0=>'待处理',1=>'待付款',2=>'已付款',3=>'已消费'
            "name": "已取消",
            "value": "-1" //
        }
    }
}