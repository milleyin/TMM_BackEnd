class PadCommand  extends ConsoleCommand
{
	/**
	 * pad index
	 */
	public function actionIndex()
	{
		if ( !!$count= Pad::model()->updateAll(array('state'=>Pad::PAD_STATE_ABNORMAL)))
		    $this->logText[] = $count;
		else
		    $this->logText[] = 0;
		return self::right;
	}
}