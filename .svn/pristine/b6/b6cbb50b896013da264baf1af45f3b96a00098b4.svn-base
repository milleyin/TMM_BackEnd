<extend name="Base/common"/>
<block name="style">

</block>
<block name="body">
<body class="success">
    <div class="title">购票成功！</div>
    <div class="card">
        <div class="content">
            <div class="tit">{$ticketInfo.name}</div>
            <div class="txt">{$ticketInfo.description}</div>
            <div class="date">使用日期：{$ticketInfo.start_time|date='Y/m/d', ###}至{$ticketInfo.end_time|date='Y/m/d', ###}</div>
            <img class="img" src="__IMG__/formbgheader.png">
        </div>
        <div class="footer">
            购票手机号码：{$orderInfo.mobile}
        </div>
        <div class="num">{$orderInfo.number}</div>
    </div>
    <div class="give">赠送</div>
    <div class="give-card">
        <div class="left">
            <div class="price">￥<span>5</span></div>
            <div class="intro">
                <p class="tit">天美优惠券</p>
                <p class="txt">仅限购买天美系列产品</p>
            </div>
        </div>
        <div class="right"><a href="http://wap.koudaitong.com/v2/ump/promocard/fetch?alias=1hdrx1gk">点击<br>领取</a></div>
    </div>
    <div class="footer-wrap">
        <a class="footer-item" href="{:U('Ticket/index', array('fromType' => $fromType))}">继续购票</a>
        <a class="footer-item" href="{:U('Ticket/myTicket', array('fromType' => $fromType))}">我的门票</a>
        <a class="footer-item" href="{:U('Index/index', array('fromType' => $fromType))}">逛逛其他</a>
    </div>
</body>


</block>