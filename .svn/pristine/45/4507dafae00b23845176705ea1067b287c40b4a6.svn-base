<extend name="Base/back"/>
<block name="style">
    <style>
        body {
            padding-top: 50px;
        }
    </style>
</block>
<block name="body">
    <body>
    <include file="Public/back-nav"/>

    <div class="container-fluid" style="padding-top: 30px;">
        <form class="form-inline" method="get" action="{:U('Back/card')}">
            <div class="form-group">
                <input type="text" class="form-control" name="word" placeholder="卡券号/购票手机号" value="{$word}">
            </div>
            <div class="form-group">
                <select class="form-control" name="status">
                    <option value="" <eq name="status" value="">selected<else/></eq> >全部</option>
                    <option value="0" <eq name="status" value="0">selected<else/></eq> >未提果</option>
                    <option value="1" <eq name="status" value="1">selected<else/></eq> >已提果</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">查找</button>
        </form>
        <div class="table-responsive manage-table" style="margin-top: 10px;">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>卡券号</th>
                    <th>使用日期</th>
                    <th>购券手机号</th>
                    <th>名称</th>
                    <th>类别</th>
                    <th>含果</th>
                    <th>是否提果</th>
                    <th>提果方式</th>
                    <th>购买时间</th>
                    <th>提果时间</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>

                <empty name="cardList">
                    <tr>
                        <td colspan="10">暂无数据...</td>
                    </tr>

                    <else />

                    <volist name="cardList" id="vo" >
                        <tr>
                            <td>{$vo.card_no}</td>
                            <td>{$vo.start_time|date='Y/m/d', ###}至{$vo.end_time|date='Y/m/d', ###}</td>
                            <td>{$vo.mobile|default='-'}</td>
                            <td>{$vo.name}</td>
                            <td>
                                <eq name="vo.type" value="1">
                                    电子卡
                                </eq>
                                <eq name="vo.type" value="2">
                                    实体卡
                                </eq>
                            </td>
                            <td>桂味50斤</td>
                            <td>
                                <eq name="vo.is_carry" value="1">
                                    已提果
                                <else />
                                    <span style="color: #d9534f;">未提果</span>
                                </eq>
                            </td>
                            <td>
                                <eq name="vo.is_carry" value="1">
                                    <eq name="vo.carry_type" value="1">
                                        邮寄
                                    <else />
                                        自提
                                    </eq>
                                <else />
                                    -
                                </eq>
                            </td>
                            <td>{$vo.add_time|date='Y/m/d H:i:s', ###}</td>
                            <td>
                                <eq name="vo.is_carry" value="1">
                                   {$vo.carry_time|date='Y/m/d H:i:s', ###}
                                <else />
                                    -
                                </eq>
                            </td>
                            <td>
                                <eq name="vo.is_carry" value="1">
                                    -
                                <else />
                                    <a href="javascript:;" class="go-carry" data-id="{$vo.id}">确认提果</a>
                                </eq>
                            </td>
                        </tr>
                    </volist>
                </empty>

                </tbody>
            </table>
            <nav style="text-align: center;">

                {$page}

            </nav>
        </div>
    </div>
    </body>
</block>
<block name="script">
    <script src="__STATIC__/layer/layer.js"></script>
    <script src="__STATIC__/layer/extend/layer.ext.js"></script>
    <script>
        $(function() {
            $('.go-carry').on('click', function() {
                var $this = $(this);
                var dataObj = $this.data();

                layer.confirm('确认提果吗？', function(index){
                    $.post(
                        "{:U('Back/goToCarry')}",
                        {'id': dataObj.id},
                        function(response) {
                            if (response.status) {
                                layer.alert(response.prompt, function(index){
                                    layer.close(index);
                                    window.location.reload();
                                });
                            } else {
                                layer.alert(response.prompt);
                            }
                    });
                });
            });
        });
    </script>
</block>