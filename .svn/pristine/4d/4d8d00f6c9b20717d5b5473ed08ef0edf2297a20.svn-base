div.form
{
	font-size: 16px;
}
div.form input,
div.form textarea,
div.form select
{
	margin: 0.2em 0 0.5em 0;
	height: 25px;
	font-size: 16px;
	padding: 0 0 0 5px;
	border-radius: 5px;
	background-color: #EDE6E6;
}
div.form textarea{
	padding: 5px;
}
div.form .value{
	display:block;
	height: 30px;
	font-size: 16px;
	padding: 0 0 0 5px;
	line-height: 34px;
}
div.form fieldset
{
	border: 1px solid #DDD;
	padding: 10px;
	margin: 0 0 10px 0;
    -moz-border-radius:7px;
}
div.form label
{
	font-weight: bold;
	font-size: 0.9em;
	width:30px;
	line-height: 30px;
	display: block;
}

div.form .row
{
	margin: 5px 0 5px -35px;
}

div.form .hint
{
	margin: 0;
	padding: 0;
	color: #999;
	white-space:nowrap; 
}

div.form .note
{
	font-style: italic;
}

div.form span.required
{
	color: red;
}

div.form div.error label:first-child,
div.form label.error,
div.form span.error
{
	color: #C00;
}

div.form div.error input,
div.form div.error textarea,
div.form div.error select,
div.form input.error,
div.form textarea.error,
div.form select.error
{
	background: #FEE;
	border-color: #C00;
}

div.form div.success input,
div.form div.success textarea,
div.form div.success select,
div.form input.success,
div.form textarea.success,
div.form select.success
{
	background: #E6EFC2;
	border-color: #C6D880;
}

div.form div.success label
{
	color: inherit;
}

div.form .errorSummary
{
	border: 2px solid #C00;
	padding: 7px 7px 12px 7px;
	margin: 0 0 20px 0;
	background: #FEE;
	font-size: 0.9em;
}

div.form .errorMessage
{
	color: red;
	font-size: 0.9em;
}

div.form .errorSummary p
{
	margin: 0;
	padding: 5px;
}

div.form .errorSummary ul
{
	margin: 0;
	padding: 0 0 0 20px;
}

div.wide.form label
{
	float: left;
	margin-right: 10px;
	position: relative;
	text-align: right;
	width: 130px;
}

div.wide.form .row
{
	clear: left;
}

div.wide.form .buttons, div.wide.form .hint, div.wide.form .errorMessage
{
	clear: left;
	padding:0 0 0 145px;
}
div.wide.form .hint{
	padding:0 0 0 10px;
}
div.form .buttons input{
	padding:5px 30px;
	height: auto;
	background-color: #930000;
	font-size: 16px;
	font-weight: 900;
	color: white;
	cursor: pointer;
	border-radius: 12px;
}
div.form .buttons input:hover{
	background: #ED1C24;
}
#search{
	overflow: hidden;
	padding: 3px 5px 5px; 
	background: #A9A9A9;
	color: white;
	font-size: 14px;
	border-radius: 5px;
	font-weight: 900;
	width:80%;
}
#search span input, 
#search span textarea,
#search span select{
	height: 18px;
	width:155px;
	padding-left: 5px;
	font-size: 14px;
	border-radius: 5px;
}
#search span select{
	width:165px;
	height: 20px;
}
#search label{
	text-align: right;
	width: 70px;
	display: inline-block;
}
#search .buttons input{
	font-size: 14px;
	font-weight: 900;
	height: auto;
	width: 165px;
	cursor: pointer;
	border-radius: 12px;
	color: white;
	padding:5px 0;
	background: #21AA37;
}
#search .buttons input:hover{
	background: #109225;
}
.row .buttons input{
	padding:5px 30px;
	height: auto;
	background-color: #930000;
	font-size: 16px;
	font-weight: 900;
	color: white;
	cursor: pointer;
	border-radius: 12px;
}
 .row .buttons input:hover{
	background: #ED1C24;
}
